[Unit]
Description=cmsd for xrootd data server
Requires=xrootd.service
Requires=apmon.service
[Install]
WantedBy=multi-user.target
Also=xrootd.service
Also=apmon.service

[Service]
User=xrootd
Type=simple
ExecStart=/usr/bin/cmsd  -l /var/log/xrootd/cmslog -c /etc/xrootd/xrootd.cf
RestartSec=10
Restart=always
TimeoutSec=10
WorkingDirectory=/var/run/xrootd
